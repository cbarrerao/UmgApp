<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Suscripciones">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_fondo">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="1080px"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_gravity="top|center"
                tools:layout_editor_absoluteX="1dp"
                android:padding="50px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="30px">

                    <LinearLayout
                        android:layout_width="450px"
                        android:layout_height="450px"
                        android:orientation="vertical"
                        android:id="@+id/lyagro"
                        android:background="@drawable/radius"
                        android:backgroundTint="@android:color/white">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_height="360px"
                            android:layout_width="360px"
                            android:layout_gravity="center"
                            android:paddingTop="10px"
                            android:src="@drawable/agro"
                            app:civ_border_color="@color/colorPrimary"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="AgroIndustrial"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                    /*<Space
                    android:layout_width="80px"
                    android:layout_height="450px"/>*/
                    <LinearLayout
                        android:id="@+id/lyalimentos"
                        android:layout_width="450px"
                        android:layout_height="450px"
                        android:orientation="vertical"
                        android:background="@drawable/radius"
                        android:backgroundTint="@android:color/white">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_height="360px"
                            android:layout_width="360px"
                            android:layout_gravity="center"
                            android:paddingTop="10px"
                            android:src="@drawable/alimentos"
                            app:civ_border_color="@color/colorPrimary"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Alimentos"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="30px">

                    <LinearLayout
                        android:layout_width="450px"
                        android:layout_height="450px"
                        android:id="@+id/lybiomedics"
                        android:orientation="vertical"
                        android:background="@drawable/radius"
                        android:backgroundTint="@android:color/white">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_height="360px"
                            android:layout_width="360px"
                            android:layout_gravity="center"
                            android:paddingTop="10px"
                            android:src="@drawable/bio"
                            app:civ_border_color="@color/colorPrimary"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Biomédica"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                    <Space
                        android:layout_width="80px"
                        android:layout_height="450px"/>
                    <LinearLayout
                        android:layout_width="450px"
                        android:layout_height="450px"
                        android:id="@+id/lycivil"
                        android:orientation="vertical"
                        android:background="@drawable/radius"
                        android:backgroundTint="@android:color/white">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_height="360px"
                            android:layout_width="360px"
                            android:layout_gravity="center"
                            android:paddingTop="10px"
                            android:src="@drawable/civil"
                            app:civ_border_color="@color/colorPrimary"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Civil"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="30px">

                    <LinearLayout
                        android:layout_width="450px"
                        android:layout_height="450px"
                        android:id="@+id/lycomputacion"
                        android:orientation="vertical"
                        android:background="@drawable/radius"
                        android:backgroundTint="@android:color/white">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_height="360px"
                            android:layout_width="360px"
                            android:layout_gravity="center"
                            android:paddingTop="10px"
                            android:src="@drawable/compu"
                            app:civ_border_color="@color/colorPrimary"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Computación"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                    <Space
                        android:layout_width="80px"
                        android:layout_height="450px"/>
                    <LinearLayout
                        android:layout_width="450px"
                        android:layout_height="450px"
                        android:id="@+id/lyelectrica"
                        android:orientation="vertical"
                        android:background="@drawable/radius"
                        android:backgroundTint="@android:color/white">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_height="360px"
                            android:layout_width="360px"
                            android:layout_gravity="center"
                            android:paddingTop="10px"
                            android:src="@drawable/electrica"
                            app:civ_border_color="@color/colorPrimary"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Eléctrica"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="30px">

                    <LinearLayout
                        android:layout_width="450px"
                        android:layout_height="450px"
                        android:id="@+id/lyelectronica"
                        android:orientation="vertical"
                        android:background="@drawable/radius"
                        android:backgroundTint="@android:color/white">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_height="360px"
                            android:layout_width="360px"
                            android:layout_gravity="center"
                            android:paddingTop="10px"
                            android:src="@drawable/electronica"
                            app:civ_border_color="@color/colorPrimary"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Electrónica"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                    <Space
                        android:layout_width="80px"
                        android:layout_height="450px"/>
                    <LinearLayout
                        android:layout_width="450px"
                        android:layout_height="450px"
                        android:id="@+id/lyfisica"
                        android:orientation="vertical"
                        android:background="@drawable/radius"
                        android:backgroundTint="@android:color/white">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_height="360px"
                            android:layout_width="360px"
                            android:layout_gravity="center"
                            android:paddingTop="10px"
                            android:src="@drawable/fisica"
                            app:civ_border_color="@color/colorPrimary"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Física"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="30px">

                    <LinearLayout
                        android:layout_width="450px"
                        android:layout_height="450px"
                        android:id="@+id/lyindustrial"
                        android:orientation="vertical"
                        android:background="@drawable/radius"
                        android:backgroundTint="@android:color/white">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_height="360px"
                            android:layout_width="360px"
                            android:layout_gravity="center"
                            android:paddingTop="10px"
                            android:src="@drawable/industrial"
                            app:civ_border_color="@color/colorPrimary"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Industrial"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                    <Space
                        android:layout_width="80px"
                        android:layout_height="450px"/>
                    <LinearLayout
                        android:layout_width="450px"
                        android:layout_height="450px"
                        android:id="@+id/lymate"
                        android:orientation="vertical"
                        android:background="@drawable/radius"
                        android:backgroundTint="@android:color/white">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_height="360px"
                            android:layout_width="360px"
                            android:layout_gravity="center"
                            android:paddingTop="10px"
                            android:src="@drawable/mate"
                            app:civ_border_color="@color/colorPrimary"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Matemática"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="30px">

                    <LinearLayout
                        android:layout_width="450px"
                        android:layout_height="450px"
                        android:id="@+id/lymec"
                        android:orientation="vertical"
                        android:background="@drawable/radius"
                        android:backgroundTint="@android:color/white">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_height="360px"
                            android:layout_width="360px"
                            android:layout_gravity="center"
                            android:paddingTop="10px"
                            android:src="@drawable/mecanica"
                            app:civ_border_color="@color/colorPrimary"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mecánica"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                    <Space
                        android:layout_width="80px"
                        android:layout_height="450px"/>
                    <LinearLayout
                        android:layout_width="450px"
                        android:layout_height="450px"
                        android:id="@+id/lyquimica"
                        android:orientation="vertical"
                        android:background="@drawable/radius"
                        android:backgroundTint="@android:color/white">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_height="360px"
                            android:layout_width="360px"
                            android:layout_gravity="center"
                            android:paddingTop="10px"
                            android:src="@drawable/quimica"
                            app:civ_border_color="@color/colorPrimary"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Química"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="30px">

                    <LinearLayout
                        android:layout_width="450px"
                        android:layout_height="450px"
                        android:id="@+id/lysistemas"
                        android:orientation="vertical"
                        android:background="@drawable/radius"
                        android:backgroundTint="@android:color/white">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_height="360px"
                            android:layout_width="360px"
                            android:layout_gravity="center"
                            android:paddingTop="10px"
                            android:src="@drawable/sistemas"
                            app:civ_border_color="@color/colorPrimary"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sistemas"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                    <Space
                        android:layout_width="80px"
                        android:layout_height="450px"/>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnexpandirbarrasusc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:elevation="6dp"
        android:src="@drawable/icbackarrow"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="normal"
        app:pressedTranslationZ="12dp"/>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:elevation="6dp"
        android:layout_gravity="center|bottom"
        android:orientation="horizontal"
        android:background="@drawable/radius"
        android:id="@+id/contbarrasusc"
        android:visibility="invisible">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnbarraexp1susc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:elevation="6dp"
            android:src="@drawable/persona_blanca"
            app:backgroundTint="@android:color/black"
            app:fabSize="normal"
            app:pressedTranslationZ="50dp"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnbarraexp2susc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:elevation="6dp"
            android:src="@drawable/anuncio_blanco"
            app:backgroundTint="@android:color/black"
            app:fabSize="normal"
            app:pressedTranslationZ="50dp"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnbarraexp3susc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:elevation="6dp"
            android:src="@drawable/add_naranja"
            app:backgroundTint="@android:color/black"
            app:fabSize="normal"
            app:pressedTranslationZ="50dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnbarraexp4susc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:elevation="6dp"
            android:src="@drawable/sesion"
            app:backgroundTint="@android:color/black"
            app:fabSize="normal"
            app:pressedTranslationZ="50dp"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>