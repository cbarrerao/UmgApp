<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainSchedule">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_fondo">

        <LinearLayout
            android:id="@+id/linearPerfil"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/gradient2"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txtJornada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:ems="10"
                android:text="Jornadas"
                android:textAlignment="center"
                android:textColor="@color/blanco"
                android:textSize="26sp" />


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="380dp"
                android:layout_height="3dp"
                android:layout_below="@+id/textView"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/gradient_fondo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_below="@+id/txtJornada"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/gradient_fondo"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgIcnAn"
                        android:layout_width="45dp"
                        android:layout_height="65dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/perfilpeople"
                        app:civ_border_color="#FB6435" />

                    <Space
                        android:layout_width="3dp"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="317dp"
                        android:layout_height="115dp"
                        android:layout_marginTop="0dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtTitNombre"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:background="#FBFEFF"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="5dp" />

                            <TextView
                                android:id="@+id/txtTitTitulo"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="5dp" />

                            <TextView
                                android:id="@+id/txtTitCodigo"
                                android:layout_width="67dp"
                                android:layout_height="35dp"
                                android:background="#EEF2F3"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="317dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/txtNombre"
                                android:layout_width="317dp"
                                android:layout_height="35dp"
                                android:background="#FBFEFF"
                                android:textSize="14sp" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="5dp" />

                            <TextView
                                android:id="@+id/txtTitulo"
                                android:layout_width="317dp"
                                android:layout_height="35dp"
                                android:textSize="14sp" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="5dp" />

                            <TextView
                                android:id="@+id/txtCodigo"
                                android:layout_width="317dp"
                                android:layout_height="35dp"
                                android:background="#EEF2F3"
                                android:textSize="14sp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearMatutina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearPerfil"
            android:layout_marginTop="23dp"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/linearsubMatutina"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnMatutina"
                    android:layout_width="350dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_bg"
                    android:text="Matutino" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtMatutina"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linearsubMatutina"
                android:layout_marginLeft="30dp"
                android:text="Matutino"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerMatutina"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@drawable/gradient_fondo"
                tools:visibility="gone" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearVespertina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearMatutina"
            android:layout_marginTop="23dp"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/linearsubVespertina"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnVespertina"
                    android:layout_width="350dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinnervespetino_bg"
                    android:text="Vespertino" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtVespertina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearsubVespertina"
                android:layout_marginLeft="30dp"
                android:text="Vespertino"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerVespertina"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@drawable/gradient_fondo"
                tools:visibility="gone" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearMixta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearVespertina"
            android:layout_marginTop="23dp"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/linearsubMixta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnMixta"
                    android:layout_width="350dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinnermixto_bg"
                    android:text="MIxto" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtMixta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearsubMixta"
                android:layout_marginLeft="30dp"
                android:text="MIxta"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerMixto"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@drawable/gradient_fondo"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/proofcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:visibility="invisible" />

        </LinearLayout>
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnexpandirbarraperfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:elevation="6dp"
        android:src="@drawable/icbackarrow"
        app:backgroundTint="#FB6435"
        app:fabSize="normal"
        app:pressedTranslationZ="12dp"/>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:elevation="6dp"
        android:layout_gravity="center|bottom"
        android:orientation="horizontal"
        android:background="@drawable/radius"
        android:id="@+id/contbarraperfil"
        android:visibility="invisible">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnbarraexp1perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:elevation="6dp"
            android:src="@drawable/persona_naranja"
            app:backgroundTint="@android:color/black"
            app:fabSize="normal"
            app:pressedTranslationZ="50dp"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnbarraexp2perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:elevation="6dp"
            android:src="@drawable/anuncio_blanco"
            app:backgroundTint="@android:color/black"
            app:fabSize="normal"
            app:pressedTranslationZ="50dp"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnbarraexp3perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:elevation="6dp"
            android:src="@drawable/add_blanco"
            app:backgroundTint="@android:color/black"
            app:fabSize="normal"
            app:pressedTranslationZ="50dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnbarraexp4perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:elevation="6dp"
            android:src="@drawable/sesion"
            app:backgroundTint="@android:color/black"
            app:fabSize="normal"
            app:pressedTranslationZ="50dp"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>