<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NuevoMensaje">

    <LinearLayout
        android:id="@+id/LinearL"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/gradient2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="55dp"
            android:text="Nuevo Mensaje"
            android:textColor="@color/blanco"
            android:textSize="26sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="380dp"
            android:layout_height="3dp"
            android:layout_below="@+id/textView"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/gradient_fondo" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/LinearL"
        android:layout_marginTop="140dp"
        android:background="@drawable/gradient_fondo">
        <Spinner
            android:id="@+id/cmbdestinatario"
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:layout_marginLeft="28dp"
            android:background="@drawable/spinneranuncios"
            />
    </RelativeLayout>




    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnexpandirbarrasusc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:elevation="6dp"
        android:src="@drawable/icbackarrow"
        app:backgroundTint="#FB6435"
        app:fabSize="normal"
        app:pressedTranslationZ="12dp" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:elevation="6dp"
        android:layout_gravity="center|bottom"
        android:orientation="horizontal"
        android:background="@drawable/radius"
        android:id="@+id/contbarrasusc"
        android:visibility="invisible">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnbarraexp1susc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:elevation="6dp"
            android:src="@drawable/persona_blanca"
            app:backgroundTint="@android:color/black"
            app:fabSize="normal"
            app:pressedTranslationZ="50dp"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnbarraexp2susc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:elevation="6dp"
            android:src="@drawable/anuncio_blanco"
            app:backgroundTint="@android:color/black"
            app:fabSize="normal"
            app:pressedTranslationZ="50dp"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnbarraexp3susc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:elevation="6dp"
            android:src="@drawable/add_naranja"
            app:backgroundTint="@android:color/black"
            app:fabSize="normal"
            app:pressedTranslationZ="50dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnbarraexp4susc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:elevation="6dp"
            android:src="@drawable/sesion"
            app:backgroundTint="@android:color/black"
            app:fabSize="normal"
            app:pressedTranslationZ="50dp"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>